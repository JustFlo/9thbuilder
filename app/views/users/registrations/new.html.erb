<% title t('signup.title') -%>

<h2><%=t 'signup.title' %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.text_field :name, placeholder: t('signup.form.name'), autofocus: true %></p>

  <p><%= f.email_field :email, placeholder: t('signup.form.email') %></p>

  <p><%= f.password_field :password, placeholder: t('signup.form.password'), autocomplete: "off" %></p>

  <p><%= f.password_field :password_confirmation, placeholder: t('signup.form.confirmation'), autocomplete: "off" %></p>

  <p><%= f.collection_select :favorite_army_id, Army.includes(:translations).order(:name), :id, :name, include_blank: true %></p>

  <p><%= f.submit t('signup.form.submit') %></p>
<% end %>

<p>
  <%= link_to t('signup.lost.password'), new_password_path(resource_name) %><br />
  <%= link_to t('signup.lost.confirmation'), new_confirmation_path(resource_name) %><br />
  <%== t('signup.information') %>
</p>
