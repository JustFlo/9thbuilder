<h1 class="col-md-4">
  The 9th Age<br />
  <em>Army Builder</em>
</h1>
<div class="col-md-offset-6 col-md-5 signin">
  <%= form_for resource, :as => resource_name, :url => session_path(resource_name) do |f| %>
    <p><%= f.email_field :email, :placeholder => t('signin.form.email') %>
    <%= f.password_field :password, :placeholder => t('signin.form.password') %>
    <%= f.submit t('menu.signin') %></p>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me, t('signin.form.remember') %> <%= link_to t('signin.form.lost'), new_password_path(resource_name) %></p>
  <% end %>
</div>

<h2 class="col-md-8 catcher">
  Composez<span> et </span>archivez<br />
  <em>vos armees favorites !</em>
</h2>
<div class="col-md-4 signup">
  <%= form_for resource, :as => resource_name, :url => registration_path(resource_name) do |f| %>
    <strong><%= t('signup.form.register') %></strong>
    <p><%= f.text_field :name, :placeholder => t('signup.form.name') %></p>
    <p><%= f.email_field :email, :placeholder => t('signup.form.email') %></p>
    <p><%= f.submit t('next') %></p>
  <% end %>
</div>

