<% if defined? @base_army_list and @base_army_list.id != @army_list.id %>

  window.location = '<%=j army_list_path @army_list %>';

<% else %>

  $('<%=j render :partial => "show", :locals => { :army_list_unit => @army_list_unit} %>')
    .appendTo('ol.army_list_units_overview')
    .hide()
    .fadeIn()
  ;

  //$('.army_list_value_points').html('<%=j render 'builder/army_lists/value_points' %>');

  popin('<%=j edit_builder_army_list_army_list_unit_path @army_list, @army_list_unit %>');

<% end %>
